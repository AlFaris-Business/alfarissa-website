    <style>
        /* Define custom CSS variables for the color palette */
        :root {
            --color-background-light: #FBF7F1; /* Beige warm */
            --color-primary-text: #1B2A41; /* Dark blue */
            --color-headings-cta: #D4C29A; /* Light gold/creamy */
            --color-secondary-text: #6E6E6E; /* Medium gray */
        }
        body {
            font-family: 'Noto Kufi Arabic', sans-serif;
            background-color: var(--color-background-light);
            color: var(--color-primary-text);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Noto Kufi Arabic', sans-serif;
            color: var(--color-primary-text);
        }
        /* Override specifically for Hero Section H2 to be gold */
        .hero-section-h2 {
            color: var(--color-headings-cta) !important; /* Ensure it's gold */
        }

        main {
            flex-grow: 1;
        }
        /* Custom styles for buttons based on the new palette */
        .btn-primary {
            background-color: var(--color-headings-cta); /* Light gold */
            color: var(--color-primary-text); /* Dark blue text on gold */
            padding: 12px 24px;
            border-radius: 9999px; /* Fully rounded */
            font-weight: 600;
            transition: background-color 0.3s ease, color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-primary:hover {
            background-color: #C0B08E; /* Slightly darker gold on hover */
        }
        .btn-secondary {
            background-color: transparent;
            color: var(--color-headings-cta); /* Light gold text */
            border: 2px solid var(--color-headings-cta); /* Light gold border */
            padding: 12px 24px;
            border-radius: 9999px;
            font-weight: 600;
            transition: background-color 0.3s ease, color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-secondary:hover {
            background-color: var(--color-headings-cta);
            color: var(--color-primary-text);
        }
        .card-icon {
            color: var(--color-primary-text); /* Dark blue for icons */
        }

        /* Specific styles for responsive spacing */
        .section-margin-y {
            margin-top: 60px;
            margin-bottom: 60px;
        }
        .section-padding-x {
            padding-left: 40px;
            padding-right: 40px;
        }
        .section-padding-y {
            padding-top: 40px;
            padding-bottom: 40px;
        }
        @media (max-width: 768px) {
            .section-margin-y {
                margin-top: 20px;
                margin-bottom: 20px;
            }
            .section-padding-x {
                padding-left: 16px;
                padding-right: 16px;
            }
            .section-padding-y {
                padding-top: 16px;
                padding-bottom: 16px;
            }
        }

        /* Floating WhatsApp Button */
        .whatsapp-float {
            position: fixed;
            width: 60px;
            height: 60px;
            bottom: 20px;
            right: 20px;
            background-color: #25D366;
            color: white;
            border-radius: 50%;
            text-align: center;
            font-size: 28px;
            box-shadow: 2px 2px 12px rgba(0,0,0,0.15);
            z-index: 1000;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
        }
        .whatsapp-float:hover {
            background-color: #128C7E;
            transform: scale(1.1);
            box-shadow: 2px 2px 16px rgba(0,0,0,0.25);
        }
        .whatsapp-float:focus {
            outline: none;
        }
        .whatsapp-float i {
            margin: 0;
        }
        @media (max-width: 768px) {
            .whatsapp-float {
                width: 50px;
                height: 50px;
                font-size: 24px;
                bottom: 15px;
                right: 15px;
            }
        }
        /* License card styles */
        .license-card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: flex-end; /* Align content to right for RTL */
            text-align: right; /* Ensure RTL alignment for block elements like p, h4 */
            transition: all 0.3s ease;
            border-top: 4px solid var(--color-headings-cta);
            min-height: 250px; /* Ensure consistent height for details */
        }
        .license-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }
        .license-card .icon {
            font-size: 3.5rem;
            color: var(--color-primary-text);
            margin-bottom: 0.75rem;
        }
        /* Explicitly set text-align for h4 within license-card */
        .license-card h4 {
            font-size: 1.5rem;
            font-family: 'Noto Kufi Arabic', sans-serif;
            font-weight: 700;
            color: var(--color-primary-text);
            margin-bottom: 0.5rem;
            text-align: right; /* Force right alignment */
            width: 100%; /* Ensure h4 takes full width to respect text-align */
        }
        /* Explicitly set text-align for p within license-card */
        .license-card p {
            font-size: 1rem;
            color: var(--color-secondary-text);
            margin-bottom: 0.5rem;
            text-align: right; /* Force right alignment */
            width: 100%; /* Ensure it takes full width */
        }
        /* Ensure strong tag inside p is bold and inherits color */
        .license-card p strong {
            font-weight: 700; /* Make strong text bold explicitly */
            color: var(--color-primary-text); /* Ensure it's dark blue */
        }
        .license-card ul {
            list-style: none;
            padding: 0;
            margin-top: 0.5rem;
            width: 100%; /* Full width for list */
            /* Ensure the UL itself is right-aligned to contain its flex items correctly */
            display: flex;
            flex-direction: column;
            align-items: flex-end; /* Align items within UL to the right */
        }
        /* Adjustments for li to ensure proper text flow with icon */
        .license-card ul li {
            display: flex;
            /* Use flex-start on RTL to put icon on the left of text block */
            /* But since text-align is right, the text itself will push to right */
            align-items: flex-start; /* Align icon and text at the top of the line */
            font-size: 0.9rem;
            color: var(--color-secondary-text);
            margin-bottom: 0.3rem;
            text-align: right; /* Ensure text itself is right-aligned within its space */
            flex-grow: 1; /* Allow li to grow */
            width: 100%; /* Ensure li takes full width of ul */
            box-sizing: border-box; /* Include padding/margin in li width */
            padding-right: 0; /* Remove any default padding */
            padding-left: 0;
        }
        .license-card ul li span { /* New span to wrap text content */
            flex-grow: 1;
            flex-shrink: 1;
            text-align: right; /* Ensure text is right-aligned */
        }
        .license-card ul li i {
            color: var(--color-headings-cta); /* Gold checkmark */
            margin-left: 0.5rem; /* Space for icon in RTL */
            margin-right: 0; /* No right margin */
            margin-top: 0.25rem; /* Align icon with text start */
            flex-shrink: 0; /* Prevent icon from shrinking */
            width: 1rem; /* Give icon a fixed width to prevent text overflow */
        }
