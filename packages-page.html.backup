            border-radius: 9999px; /* Fully rounded */
            font-weight: 600;
            transition: background-color 0.3s ease, color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-primary:hover {
            background-color: #C0B08E; /* Slightly darker gold on hover */
        }
        .btn-secondary {
            background-color: transparent;
            color: var(--color-headings-cta); /* Light gold text */
            border: 2px solid var(--color-headings-cta); /* Light gold border */
            padding: 12px 24px;
            border-radius: 9999px;
            font-weight: 600;
            transition: background-color 0.3s ease, color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .btn-secondary:hover {
            background-color: var(--color-headings-cta);
            color: var(--color-primary-text);
        }
        .card-icon {
            color: var(--color-primary-text); /* Dark blue for icons */
        }

        /* Specific styles for responsive spacing */
        .section-margin-y {
            margin-top: 60px;
            margin-bottom: 60px;
        }
        .section-padding-x {
            padding-left: 40px;
            padding-right: 40px;
        }
        .section-padding-y {
            padding-top: 40px;
            padding-bottom: 40px;
        }
        @media (max-width: 768px) {
            .section-margin-y {
                margin-top: 20px;
                margin-bottom: 20px;
            }
            .section-padding-x {
                padding-left: 16px;
                padding-right: 16px;
            }
