    <script>
        // Set up font classes for easy use
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        notoKufi: ['Noto Kufi Arabic', 'sans-serif'],
                        'arabic-text': ['Noto Kufi Arabic', 'sans-serif'],
                    },
                },
            },
        };

        // Accordion functionality for FAQ items
        function toggleAccordion(header) {
            const content = header.nextElementSibling;
            const icon = header.querySelector('.accordion-icon');

            if (content.classList.contains('active')) {
                content.classList.remove('active');
                icon.classList.remove('rotate');
            } else {
                // Close other open accordions
                document.querySelectorAll('.accordion-content.active').forEach(item => {
                    item.classList.remove('active');
                    item.previousElementSibling.querySelector('.accordion-icon').classList.remove('rotate');
                });
                content.classList.add('active');
                icon.classList.add('rotate');
            }
        }
    </script>

